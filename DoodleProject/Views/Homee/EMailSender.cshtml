
@{
    ViewBag.Title = "EMailSender";
    Layout = "~/Views/Shared/Layout.cshtml";
}

        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <br />
                    <h1 class="">Etkinlik</h1>
                </div>
            </div>
        </div>
    


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-6">



                <form action="#" class="p-5 bg-white">


                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Etkinlik Konusu</label>
                            <input type="email" id="ActivitySubject" class="form-control">
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">Etkinlik Detayı</label>
                            <textarea name="message" id="ActivityExplanation" cols="30" rows="3" class="form-control" placeholder=""></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Platform</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Süre</label>
                            <input type="text" id="ActivityDuration" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Tarih Seçimi 1</label>
                            <input type="text" id="ActivityDate" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Tarih Seçimi 2</label>
                            <input type="text" id="ActivityDate2" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Tarih Seçimi 3</label>
                            <input type="text" id="ActivityDate3" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Tarih Seçimi 4</label>
                            <input type="text" id="ActivityDate4" class="form-control">
                        </div>
                    </div>

                    <br />

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Gönder" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>


                </form>
            </div>

        </div>
    </div>

</div>








<div class="container">

    @if (ViewBag.Kontrol != null)
    {
        <h3 class="text-warning">@ViewBag.Kontrol</h3>
    }
    <div class="post-entry text-left">
        <h1 class="">Mail Gönder</h1>
    </div>

    <div class="col-lg-5 " ng-app="">
        @using (Html.BeginForm("EMailSender", "Homee", FormMethod.Post, new { @name = "myForm" }))
        {


            <div class="form-group">

                <input type="text" class="form-control" name="sendMailAdress" placeholder="Email Adresi" />

            </div>


            <div class="form-group">

                <input type="text" class="form-control" name="subject" placeholder="Konu" id="sifre" />

            </div>
            <div class="form-group">

                <textarea name="body" class="form-control" placeholder="Açıklama"></textarea>


            </div>

            <br />
            <div class="form-group">

                <input type="submit" class="form-control btn-primary" value="Mail Gönder" />

            </div>


        }
    </div>

</div>


